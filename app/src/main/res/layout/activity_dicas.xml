<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dicas">


    <ImageView
            android:layout_width="415dp"
            android:layout_height="741dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView15"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Dicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="104dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="232dp"
            android:layout_marginRight="232dp"
            app:fontFamily="sans-serif-black"/>
    <TextView
            android:layout_width="297dp"
            android:layout_height="91dp"
            android:id="@+id/textView14"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="18sp"
            android:text="Regue sua plantinha a cada dois ou três dias, mas fique atento ao nível de umidade apresentado na tela inicial!"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginStart="60dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:layout_width="297dp"
                android:layout_height="92dp"
                android:id="@+id/textView15"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="18sp"
                android:text="Se for utilizar um vaso sem furos, é bom que sejam colocadas pedrinhas, antes da planta, para que ela não apodreça."
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView14"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.53"/>
        <TextView
                android:layout_width="310dp"
                android:layout_height="108dp"
                android:id="@+id/textView16"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="18sp"
                android:text="A adubação pode ser feita com húmos de minhoca ou outros compostos orgânicos e fertilizantes podem ser colocados em quantidade pequena, uma vez por semana."
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView15"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.611"/>
        <TextView
                android:layout_width="297dp"
                android:layout_height="92dp"
                android:id="@+id/textView20"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="18sp"
                android:text="Habilite as notificações para receber mensagens da sua plantinha."
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView16"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/idea"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView3" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toTopOf="@+id/textView14" app:layout_constraintHorizontal_bias="0.686"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>


</android.support.constraint.ConstraintLayout>