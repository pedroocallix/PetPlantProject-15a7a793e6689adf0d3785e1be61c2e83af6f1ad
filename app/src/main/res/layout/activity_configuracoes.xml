<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Configuracoes">

    <ImageView
            android:layout_width="415dp"
            android:layout_height="741dp" app:srcCompat="@color/colorAccent"
            android:id="@+id/imageView12"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Configurações"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/textView5"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="104dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="140dp"
            android:layout_marginRight="140dp"
            app:fontFamily="sans-serif-black"/>
    <TextView
            android:text="Ativar notificações"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:id="@+id/textView11"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" android:textSize="18sp"
            android:layout_marginStart="64dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="64dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/button6"/>
    <ImageView
            android:layout_width="61dp"
            android:layout_height="64dp" app:srcCompat="@drawable/settings"
            android:id="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="84dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintEnd_toStartOf="@+id/textView5" android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_marginTop="148dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp" app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:switchTextAppearance="@style/TextAppearance.AppCompat.Title" android:textOn="On"
            android:textOff="Off" android:textColor="@color/colorPrimary" android:checked="false"
            tools:checked="false"/>
    <Button
            android:text="  Editar foto da planta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp"
            android:background="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>